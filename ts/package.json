{
    "name": "aiblog",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "./dev.sh",
        "build": "./build.sh",
        "blog-ui-node": "tsx blog-ui/app.ts",
        "blog-api-node": "tsx blog-api/app.ts",
        "blog-ui-ts": "tsc -b blog-ui/public/src/ts --watch",
        "blog-ui-tailwind": "tailwindcss -i ./blog-ui/public/src/tailwind.css -o ./blog-ui/public/dist/tailwind.css --watch --config ./blog-ui/tailwind.config.js",
        "blog-ui-build-tailwind": "tailwindcss -i ./blog-ui/public/src/tailwind.css -o ./blog-ui/public/dist/tailwind.css --minify --config ./blog-ui/tailwind.config.js",
        "blog-ui-build-ts": "tsc -p blog-ui/public/src/ts",
        "build-ts": "tsc -p .",
        "migrate:up": "tsx ./node_modules/.bin/knex --knexfile ./knexfile.ts \"migrate:up\"",
        "migrate:down": "tsx ./node_modules/.bin/knex --knexfile ./knexfile.ts \"migrate:down\"",
        "migrate:latest": "tsx ./node_modules/.bin/knex --knexfile ./knexfile.ts \"migrate:latest\"",
        "lint": "DEBUG=typescript-eslint:*. eslint . --ignore-pattern 'build' --ignore-pattern 'blog-ui/tailwind.config.js' --ignore-pattern 'blog-ui/public/lib' --ignore-pattern 'blog-ui/public/dist'",
        "lint:fix": "DEBUG=typescript-eslint:*. eslint . --fix --ignore-pattern 'build' --ignore-pattern 'blog-ui/tailwind.config.js' --ignore-pattern 'blog-ui/public/lib' --ignore-pattern 'blog-ui/public/dist'",
        "test": "node --import tsx --test $(find tests/ -name \"*.test.ts\")"
    },
    "author": "umpordez",
    "license": "UNLICENSED",
    "description": "aiblog created on my youtube channel (@ligeiro)",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@tailwindcss/line-clamp": "^0.4.4",
        "@tailwindcss/typography": "^0.5.15",
        "@types/bcrypt": "^5.0.2",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.7",
        "@types/node": "^22.5.1",
        "eslint": "^9.9.1",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.6",
        "tailwindcss": "^3.4.12",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.4.0"
    },
    "dependencies": {
        "@distube/ytdl-core": "^4.14.4",
        "@wcj/markdown-to-html": "^3.0.2",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.0",
        "groq-sdk": "^0.7.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "lodash": "^4.17.21",
        "markdown-it": "^14.1.0",
        "pg": "^8.12.0",
        "zod": "^3.23.8"
    }
}
