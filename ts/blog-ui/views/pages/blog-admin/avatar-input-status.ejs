<!DOCTYPE html>
<html lang="en" dir="ltr">
    <%- include('../../partials/head.ejs') %>
    <script type="text/javascript">
        window.avatarInputId = '<%= avatarInputId %>';
    </script>

    <body>
        <div class="grid grid-rows-[auto_1fr_auto] min-h-screen">
            <%- include('../../partials/header.ejs') %>
            <main class="bg-gray-50">
                <div class="py-4 px-4 mx-auto max-w-[400px] text-slate-600">
                    <h2 class="text-2xl font-bold text-gray-900">
                        Input Status
                    </h2>
                    <p class="text-sm">ID: <%= avatarInputId %></p>
                    <hr class="my-4" />

                    <div id="statusWrapper"></div>

                    <div class="hidden" id="retryWrapper">
                        <a
                            class="text-sm text-blue-600"
                            href="#">Retry</a>
                    </div>

                    <p id='errorMessage' class="hidden mb-6 text-red-600"></p>

                    <hr class="my-4" />

                    <br />
                    <button 
                        disabled
                        type="submit"
                        class="opacity-20 w-full text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                    >Criar Post</button>

                </div>
            </main>
            <%- include('../../partials/footer.ejs') %>
        </div>
        <script type='module' src="/dist/pages/blog-admin/avatar-input-status.js"></script>
        <%- include('../../partials/loading-overlay.ejs') %>
    </body>
</html>