<!DOCTYPE html>
<html lang="en" dir="ltr">
    <%- include('../../partials/head.ejs') %>
    <body>
        <div class="grid grid-rows-[auto_1fr_auto] min-h-screen">
            <%- include('../../partials/header.ejs') %>
            <main class="bg-gray-50">
                <div class="py-4 px-4 mx-auto max-w-[400px]">
                    <form class="space-y-2 md:space-y-4 step-1" action="#">
                        <div>
                            <label
                                for="youtube_url"
                                class="block mb-2 text-sm font-medium">YouTube URL</label>

                            <input
                                type="youtube_url"
                                name="youtube_url"
                                id="youtube_url"
                                class="bg-white bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-green-600 focus:border-green-600 block w-full p-2.5"
                                placeholder="https://www.youtube.com/watch?v=rmCJjWxEpfo"
                                required>
                        </div>

                        <button 
                            type="submit"
                            class="w-full text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                        >Next (PROXIMO)</button>
                    </form>
                </div>
            </main>
            <%- include('../../partials/footer.ejs') %>
        </div>
        <script type='module' src="/dist/pages/blog-admin/create-post.js"></script>
        <%- include('../../partials/loading-overlay.ejs') %>
    </body>
</html>